
@{
    ViewData["Title"] = "Booking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row" style="margin-top:5%">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-8"> <h4 class="text-info">Please edit and delete your bookings from here!</h4></div>
                <div class="col-md-4"><a class="btn btn-primary text-white float-right m-1" asp-action="doCreateBooking">Book Now</a></div>
            </div>
            <table class="table table-light text-center">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">Booking Id</th>
                        <th scope="col">Hall Name</th>
                        <th scope="col">From Date</th>
                        <th scope="col">To Date</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.allBookings != null)
                    {
                        @foreach (var item in (List<Bookings>)ViewBag.allBookings)
                        {
                            <tr>
                                <th scope="row">@item.bookingId</th>
                                <td>@item.bookingHallname</td>
                                <td>@item.fromDate</td>
                                <td>@item.toDate</td>
                                <td><a class="btn btn-primary text-white" asp-action="doEdit" asp-route-bookingId="@item.bookingId">Modify</a>  <a class="btn btn-danger text-white" onclick="doDelete(@item.bookingId)">Delete</a></td>
                            </tr>

                        }

                    }
                </tbody>
            </table>
        </div>
    </div>


